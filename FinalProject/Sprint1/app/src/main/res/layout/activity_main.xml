    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:padding="6dp"
        android:weightSum="2">

        <Button
            android:id="@+id/setupMatrix"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_weight="0.5"
            android:text="Setup Augmented Matrix" />

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_marginTop="1pt"
            >

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="7"
                android:textSize="12pt"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="8"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="9"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDEL"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="@string/del"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonLeft"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="L"
                android:textSize="12pt" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="4"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="5"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="6"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPlusMinus"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="+/-"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonRight"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="R"
                android:textSize="12pt" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="1"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="2"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="@string/_3"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAddEqn"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="+Eqn"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAddVar"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="+Var"
                android:textSize="12pt" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDot"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="."
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="0"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFrac"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="/"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSubEqn"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="-Eqn"
                android:textSize="12pt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSubVar"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="-Var"
                android:textSize="12pt" />


        </TableRow>

    </TableLayout>
</LinearLayout>