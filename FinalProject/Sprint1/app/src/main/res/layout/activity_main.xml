    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:padding="6dp"
        android:weightSum="2">

        <Button
            android:id="@+id/setupMatrix"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_weight="0.5"
            android:text="Setup Augmented Matrix" />

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0pt"
            android:layout_marginTop="0pt"
            >

            <Button
                style="@style/NumberButton"
                android:id="@+id/button7"
                android:text="7"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/button8"
                android:text="8"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/button9"
                android:text="9"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/buttonDEL"
                android:text="DEL"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/buttonLeft"
                android:text="L"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                style="@style/NumberButton"
                android:id="@+id/button4"
                android:text="4"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/button5"
                android:text="5"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/button6"
                android:text="6"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/buttonPlusMinus"
                android:text="+/-"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/buttonRight"
                android:text="R"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                style="@style/NumberButton"
                android:id="@+id/button1"
                android:text="1"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/button2"
                android:text="2"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/button3"
                android:text="3"
                />

            <Button
                style="@style/EquationVariable"
                android:id="@+id/buttonAddEqn"
                android:text="+E"
                />

            <Button
                style="@style/EquationVariable"
                android:id="@+id/buttonAddVar"
                android:text="+V"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                style="@style/NumberButton"
                android:id="@+id/buttonFrac"
                android:text="/"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/button0"
                android:text="0"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/buttonDot"
                android:text="."
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/buttonSubEqn"
                android:text="-E"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/buttonSubVar"
                android:text="-V"
                />

        </TableRow>



    </TableLayout>
</LinearLayout>